@model BibliotecaMunicipal.Models.Livros.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Livro[0].LivroName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro[0].Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro[0].Editora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livro[0].ISBN)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Livro) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LivroName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LivroId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LivroId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LivroId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
